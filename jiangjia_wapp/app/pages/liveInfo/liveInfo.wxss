/* pages/liveInfo/liveInfo.wxss */

.match-top {
  height: 350rpx;
}

.match-top-con {
  width: 105rpx;
}

.match-top-con image {
  width: 105rpx;
  height: 105rpx;
  /* background: #fff; */
  /* padding: 20rpx; */
  box-sizing: border-box;
}

.match-top-con view {
  bottom: -50rpx;
  left: 50%;
  transform: translateX(-50%);
  white-space: nowrap;
}

.match-top-num {
  width: 250rpx;
  vertical-align: 25rpx;
}

.match-top-num .tx {
  left: 50%;
  transform: translateX(-50%);
  white-space: nowrap;
  top: -30rpx;
}

.match-top-num .tx1 {
  top: auto;
  bottom: -30rpx;
}

.home-hot {
  padding: 24rpx;
}

.home-hot-tx::before {
  height: 13rpx;
  background: rgba(231, 30, 31, 1);
  border-radius: 17rpx 2rpx 17rpx 2rpx;
  opacity: 0.3;
  width: 100%;
  position: absolute;
  content: '';
  left: 0;
  bottom: 0;
}

.home-hot-tx view {
  background: rgba(252, 231, 231, 1);
  border-radius: 17rpx 2rpx 17rpx 2rpx;
  padding: 0 10rpx;
}

.art-bot {
  position: fixed;
  z-index: 2;
  left: 0;
  width: 100%;
  padding: 15rpx 24rpx;
  bottom: 0;
  box-shadow: 0px -4rpx 10rpx 0px rgba(0, 0, 0, 0.04);
}

.art-bot .fr {
  min-width: 190rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.pb170 .art-bot {
  padding-bottom: 83rpx;
}

.coupon-bot {
  position: fixed;
  z-index: 3;
  left: 0;
  width: 100%;
  padding: 0 24rpx;
  bottom: 100rpx;
  box-shadow: 0px -4rpx 10rpx 0px rgba(0, 0, 0, 0.04);
  background: rgba(255, 244, 245, 1);
}

.pb170 .coupon-bot {
  bottom: 168rpx;
}

.back-coupon-con {
  height: 168rpx;
}
.back-coupon-con image{
  width: 26rpx;
  height: 26rpx;
  top: 10rpx;
left: 10rpx;
border: 1px solid #eee;

}

.back-coupon-fl {
  width: 390rpx;
  padding: 38rpx 0 0 44rpx;
}


.back-coupon-btn {
  padding: 47rpx 20rpx;
  width: 107rpx;
  text-align: center;
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 37rpx;
}

.back-coupon-box{
  max-height: 600rpx;
  overflow-y: auto;
  padding-bottom: 20rpx;
}

.pb170 .back-coupon-box{
  padding-bottom: 80rpx;
}
.back-coupon-fr{
  margin-top: 38rpx;
  margin-right: 40rpx;
}