}

.team-match-top {
  line-height: 87rpx;
}

.team-match-top image {
  width: 64rpx;
  height: 64rpx;
}

.team-match-fl {
  padding: 5rpx 46rpx 7rpx 38rpx;
  width: 170rpx;
}

.team-match-con image {
  width: 60rpx;
  height: 44rpx;
}

.team-match-cen {
  width: 436rpx;
  padding: 0 44rpx 0 57rpx;
  line-height: 44rpx;
}

.team-match-fr {
  padding: 38rpx 0 0 19rpx;
}

.team-match-fr view {
  width: 38rpx;
  line-height: 38rpx;
  border-radius: 50%;
}

.team-line-top {
  line-height: 87rpx;
}

.team-line-top::after {
  position: absolute;
  content: '';
  width: 4rpx;
  height: 20rpx;
  background: rgba(231, 28, 29, 1);
  border-radius: 2rpx;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.team-line image {
  width: 52rpx;
  height: 52rpx;
}

.team-line {
  padding: 18rpx 0;
  line-height: 52rpx;
}

.team-layer-fl {
  width: 175rpx;
  left: 0;
  top: 0;
  height: 100%;
  overflow-y: auto;
}

.team-layer-fl .on {
  background: #fff;
  color: #bc0100;
}

.team-layer-fl .on::after {
  position: absolute;
  content: '';
  left: 0;
  width: 4rpx;
  height: 20rpx;
  background: rgba(231, 28, 29, 1);
  border-radius: 2rpx;
  top: 50%;
  transform: translateY(-50%);
}

.team-layer {
  width: 576rpx;
}

.team-layer .img1 {
  width: 52rpx;
  height: 52rpx;
  margin-top: 18rpx;
}

.team-layer .img2 {
  width: 42rpx;
  height: 42rpx;
  margin-top: 23rpx;

}

.team-integral-bg{
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  opacity: 0.2;
}

.team-integral-con{
  border-bottom: 1px solid rgba(237, 237, 237, 1)
