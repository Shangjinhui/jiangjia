/* pages/teamInfo/teamInfo.wxss */

.match-top {
  height: 289rpx;
  padding-top: 55rpx;
}

.match-top-con {
  width: 105rpx;
}
swiper{
  height: 289rpx;
}

.home-top {
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 1px 0px 0px rgba(216, 216, 216, 0.5);
  border-radius: 12rpx 12rpx 0px 0px;
  margin-top: -20rpx;
}

.home-top.on {
  position: fixed;
  margin-top: 0;
  left: 0;
  top: 0;
  z-index: 3;
  width: 100%;
  border-radius: 0;
}

.match-top-con image {
  width: 105rpx;
  height: 105rpx;
  background: #fff;
  /* padding: 20rpx; */
  box-sizing: border-box;
}

.match-top-con view {
  bottom: -50rpx;
  left: 50%;
  transform: translateX(-50%);
  white-space: nowrap;
}

.match-top-num {
  width: 250rpx;
}

.match-top-num .tx {
  left: 50%;
  transform: translateX(-50%);
  white-space: nowrap;
  top: -30rpx;
}

.match-top-box {
  left: 50%;
  bottom: 20rpx;
  transform: translateX(-50%);
  text-align: center;
}

.match-top-box view {
  width: 38rpx;
  line-height: 38rpx;
  margin: 0 3rpx;
  border-radius: 50%;
  display: inline-block;

  /* -webkit-transition: 0.3s linear;
-moz-transition: 0.3s linear;
-ms-transition: 0.3s linear;
-o-transition: 0.3s linear;
transition: 0.3s linear; */

}
 view.sale{
  transform: scale(1.2);
  margin: 0 9rpx;
}

.avatar {
  width: 78rpx;
  height: 78rpx;
  border-radius: 50%;
  margin: 0 6rpx;
}

.info-prize {
  padding: 0 10rpx;
}

.info-prize image {
  width: 78rpx;
  height: 78rpx;
  margin: 0 auto 10rpx auto;
}

.info-country {
  width: 40rpx;
  height: 30rpx;
  vertical-align: -4rpx;
}
  

.info-match {
  padding-left: 186rpx;
}

.info-match-fl {
  padding-right: 46rpx;
  padding-left: 38rpx;
  width: 186rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 0;
}

.info-match-fr {
  padding-left: 57rpx;
  line-height: 44rpx;
  width: 450rpx;
}

.info-match-fr image {
  width: 60rpx;
  height: 44rpx;
}

.team-integral-tx {
  left: 50%;
  transform: translateX(-50%);
