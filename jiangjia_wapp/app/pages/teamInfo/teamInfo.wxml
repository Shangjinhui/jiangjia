    <view class="bgfff radius10 mb20" wx:for="{{list}}" wx:key="index" wx:for-index="index" wx:for-item="item">
      <view class="pd24 bor-boD8D8D8 fsize30 team-match-top">
        <image src="{{item.competition_logo?item.competition_logo:imgUrl+'banner_1.png'}}" mode="aspectFit" class="fl mt15 mr10"></image> {{item.competition_name}}</view>
      <view class="pl20 pr20 pt20 pb10">
        <navigator hover-class="none" open-type="{{isHome?'reLaunch':'navigate'}}" url="/pages/matchInfo/matchInfo?id={{it.match_id}}" class="team-match-con f-cb bor-boD8D8D8 pt20 pb20" wx:for="{{item.list}}" wx:key="idx" wx:for-index="idx" wx:for-item="it">
          <view class="fl center  team-match-fl box">
            <view class="fsize22 coA0A0A0 mb5">{{it.time}}</view>
            <!-- <view wx:if="{{it.status_id==8}}">完场</view> -->
          <view wx:if="{{it.status_id==1}}">未</view>
          <view wx:if="{{it.status_id==3}}">中场</view>
          <view wx:if="{{it.status_id==7}}">点球</view>
          <view wx:if="{{it.status_id==8}}">完场</view>
          <view wx:if="{{it.status_id==9}}">推迟</view>
          <view wx:if="{{it.status_id==10}}">中断</view>
          <view wx:if="{{it.status_id==11}}">腰斩</view>
          <view wx:if="{{it.status_id==12}}">取消</view>
          <view wx:if="{{it.status_id==13}}">待定</view>

          </view>
          <view class="fl team-match-cen bor-riD8D8D8 bor-leD8D8D8 box">
            <view class="f-cb mb20">
              <image src="{{it.home_team_logo?it.home_team_logo:imgUrl+'banner_1.png'}}" mode="aspectFit" class="fl mr10"></image>
              <view class="fl row1">{{it.home_team_name}}</view>
              <view class="fr fsize22 bold {{it.home_scores[0]>it.away_scores[0]?'':'coccc'}}" wx:if="{{it.status_id!=1&&it.status_id!=9&&it.status_id!=12&&it.status_id!=13}}">{{it.home_scores[0]}}</view>
            </view>
            <view class="f-cb">
              <image src="{{it.away_team_logo?it.away_team_logo:imgUrl+'banner_1.png'}}" mode="aspectFit" class="fl mr10"></image>
              <view class="fl row1">{{it.away_team_name}}</view>
              <view class="fr fsize22 bold {{it.home_scores[0]<it.away_scores[0]?'':'coccc'}}" wx:if="{{it.status_id!=1&&it.status_id!=9&&it.status_id!=12&&it.status_id!=13}}">{{it.away_scores[0]}}</view>
            </view>
          </view>
          <view wx:if="{{it.status_id==8}}">
            <view class="fr fsize22 center team-match-fr box" wx:if="{{it.home_team_id==id}}">
              <view class="cofff bgE71415" wx:if="{{it.home_scores[0]>it.away_scores[0]}}">胜</view>
              <view class="cofff bgbdbdbd" wx:elif="{{it.home_scores[0]==it.away_scores[0]}}">平</view>
              <view class="cofff bg022B43" wx:else>负</view>
            </view>
            <view class="fr fsize22 center team-match-fr box" wx:else>
              <view class="cofff bgE71415" wx:if="{{it.home_scores[0]<it.away_scores[0]}}">胜</view>
              <view class="cofff bgbdbdbd" wx:elif="{{it.home_scores[0]==it.away_scores[0]}}">平</view>
              <view class="cofff bg022B43" wx:else>负</view>
            </view>
          </view>

        </navigator>
      </view>
    </view>

    <view class="list-none pb50" wx:if="{{list.length==0}}">
      <image src="{{imgUrl+'no3.png'}}" class=" img3"></image>
      <view>暂无数据</view>
    </view>

  </view>



  <!-- 阵容 -->
  <view class="pd24 pt20 pb20 fsize24" wx:if="{{nav==4&&squadInfo}}">
    <view class="bgfff radius10 mb20" wx:if="{{squadInfo.manager}}">
      <view class="fsize30 pd24 rel team-line-top bold bor-boD8D8D8">主教练</view>
      <view class="pd24 fsize22">
        <view class="f-cb team-line">
          <image src="{{squadInfo.manager_logo?squadInfo.manager_logo:imgUrl+'tx.png'}}" mode="aspectFill" class="fl radius-50 mr20"></image>
          <view class="fl">{{squadInfo.manager}}</view>
        </view>
      </view>
    </view>

    <view class="bgfff radius10 mb20" wx:if="{{squadInfo.forward.length>0}}">
      <view class="fsize30 pd24 rel team-line-top bold bor-boD8D8D8">前锋</view>
      <view class="pd24 fsize22">
        <navigator hover-class="none" open-type="{{isHome?'reLaunch':'navigate'}}" url="/pages/teamPlayer/teamPlayer?id={{item.player_id}}" class="f-cb team-line bor-boD8D8D8" wx:for="{{squadInfo.forward}}" wx:key="index">
          <image src="{{item.player_logo?item.player_logo:imgUrl+'tx.png'}}" mode="aspectFill" class="fl radius-50 mr20"></image>
          <view class="fl wid86">{{item.shirt_number}}</view>
          <view class="fl">{{item.player_name}}</view>
          <view class="fr">{{item.market_value/10000}}万欧</view>
        </navigator>
      </view>
    </view>

    <view class="bgfff radius10 mb20" wx:if="{{squadInfo.midfield.length>0}}">
      <view class="fsize30 pd24 rel team-line-top bold bor-boD8D8D8">中场</view>
      <view class="pd24 fsize22">
        <navigator hover-class="none" open-type="{{isHome?'reLaunch':'navigate'}}" url="/pages/teamPlayer/teamPlayer?id={{item.player_id}}" class="f-cb team-line bor-boD8D8D8" wx:for="{{squadInfo.midfield}}" wx:key="index">
          <image src="{{item.player_logo?item.player_logo:imgUrl+'tx.png'}}" mode="aspectFill" class="fl radius-50 mr20"></image>
          <view class="fl wid86">{{item.shirt_number}}</view>
          <view class="fl">{{item.player_name}}</view>
          <view class="fr">{{item.market_value/10000}}万欧</view>
        </navigator>
      </view>
    </view>


    <view class="bgfff radius10 mb20" wx:if="{{squadInfo.rearguard.length>0}}">
      <view class="fsize30 pd24 rel team-line-top bold bor-boD8D8D8">后卫</view>
      <view class="pd24 fsize22">
        <navigator hover-class="none" open-type="{{isHome?'reLaunch':'navigate'}}" url="/pages/teamPlayer/teamPlayer?id={{item.player_id}}" class="f-cb team-line bor-boD8D8D8" wx:for="{{squadInfo.rearguard}}" wx:key="index">
          <image src="{{item.player_logo?item.player_logo:imgUrl+'tx.png'}}" mode="aspectFill" class="fl radius-50 mr20"></image>
          <view class="fl wid86">{{item.shirt_number}}</view>
          <view class="fl">{{item.player_name}}</view>
          <view class="fr">{{item.market_value/10000}}万欧</view>
        </navigator>
      </view>
    </view>

    <view class="bgfff radius10 mb20" wx:if="{{squadInfo.goalkeeper.length>0}}">
      <view class="fsize30 pd24 rel team-line-top bold bor-boD8D8D8">守门员</view>
      <view class="pd24 fsize22">
        <navigator hover-class="none" open-type="{{isHome?'reLaunch':'navigate'}}" url="/pages/teamPlayer/teamPlayer?id={{item.player_id}}" class="f-cb team-line bor-boD8D8D8" wx:for="{{squadInfo.goalkeeper}}" wx:key="index">
          <image src="{{item.player_logo?item.player_logo:imgUrl+'tx.png'}}" mode="aspectFill" class="fl radius-50 mr20"></image>
          <view class="fl wid86">{{item.shirt_number}}</view>
          <view class="fl">{{item.player_name}}</view>
          <view class="fr">{{item.market_value/10000}}万欧</view>
        </navigator>
      </view>
    </view>


    <view class="list-none pb50" wx:if="{{!squadInfo.manager&&squadInfo.forward.length==0&&squadInfo.midfield.length==0&&squadInfo.rearguard.length==0&&squadInfo.goalkeeper.length==0}}">
      <image src="{{imgUrl+'no3.png'}}" class=" img3"></image>
      <view>暂无数据</view>
    </view>

  </view>


  <!-- 最佳球员 -->
  <view class=" pt20  fsize24" wx:if="{{nav==5}}">
    <view class="pd24 mb20">
      <view class="fsize24 pd24 lh72 radius6" bindtap="areaShow" style="background:#fff url({{imgUrl+'team_ico3.png'}}) no-repeat center right 24rpx/22rpx 13rpx;">{{cate}} {{season}}</view>
    </view>


    <view class="f-cb bgfff lh88 fsize24 rel ">
      <view class="abs  bgF4F7FA team-layer-fl">
        <view class="rel pd24 {{item.id==type?'on':''}}" wx:for="{{typeList}}" wx:key="index" bindtap="changeType" data-type="{{item.id}}">{{item.name}}</view>
      </view>
      <view class="fr team-layer">
        <view class="f-cb coA0A0A0">
          <view class="fl wid120 pl25 box">排名</view>
          <view class="fl wid350">球员</view>
          <!-- <view class="fl wid110">球队</view> -->
          <view class="fl wid80">总数</view>
        </view>
        <view style="height:{{height}}px;overflow-y: auto;">
          <navigator hover-class="none" url="/pages/teamPlayer/teamPlayer?id={{item.player_id}}" class="f-cb bor-boD8D8D8" wx:for="{{playerInfo}}" wx:key="index">
            <view class="fl wid120 pl25 box">{{index+1}}</view>
            <view class="fl wid350">
              <image src="{{item.player_logo?item.player_logo:imgUrl+'tx.png'}}" mode='aspectFill' class="radius-50 fl mr20 img1"></image>
              <view class="fl row1">{{item.player_name}}</view>
            </view>
            <!-- <view class="fl wid110">
              <image src="{{item.team_logo?item.team_logo:imgUrl+'banner_1.png'}}" mode='aspectFit' class="block img2"></image>
            </view> -->
            <view class="fl wid80">{{item.number}}</view>
          </navigator>
          <view class="list-none pb50" wx:if="{{playerInfo.length==0}}">
            <image src="{{imgUrl+'no3.png'}}" class=" img3"></image>
            <view>暂无数据</view>
          </view>

        </view>
      </view>
    </view>

  </view>


  <!-- 球员联盟选择 -->
  <view class="main" wx:if="{{condition}}">
    <view class="modal-mask {{maskVisual}}" bindtap="cascadeDismiss"></view>
    <view animation="{{animationData}}" class="citypicker">
      <view class="cityheader">
        <view bindtap="opened" class="city-cancel">取消</view>
        <view bindtap="confirm" class="city-true">确定</view>
      </view>
      <view class="cityContent">
        <picker-view indicator-style="height: 50rpx;" style="width: 100%; height: 208rpx; " value="{{value}}" bindchange="bindChange" class="citybody">
          <picker-view-column>
            <view wx:for="{{cateList}}" wx:key="item" class="cityList" style="line-height:68rpx;">{{item.name}}</view>
