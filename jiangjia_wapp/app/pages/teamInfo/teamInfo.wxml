      <view class="pd24 bor-boD8D8D8 fsize30 team-match-top">
        <image src="{{recentMatch.competition_logo?recentMatch.competition_logo:imgUrl+'banner_1.png'}}" mode="aspectFit" class="fl mt15 mr10"></image> {{recentMatch.competition_name}}</view>
