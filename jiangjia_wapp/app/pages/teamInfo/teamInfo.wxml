<!--pages/teamInfo/teamInfo.wxml-->
<view class="minhei box bgF4F7FA" wx:if="{{isShow}}">
  <view class="bg022B43 center">
    <view class="rel match-top-con marginauto fsize28 pb50 pt10">
      <image src="{{info.team_info.team_logo?info.team_info.team_logo:imgUrl+'banner_1.png'}}" mode='aspectFit' class="radius-50 block"></image>
    </view>
  </view>

  <view class="fb bgfff center fsize24 bold lh72 rel home-top">
    <view class="fb fb-col item-grow-1 fb-cross-center  {{nav==item.id?'coE71415':''}}" bindtap="changeNav" data-nav="{{item.id}}" wx:for="{{navList}}" wx:key="index">{{item.name}}</view>
  </view>

  <view class="fb bgfff center fsize24 bold lh72 rel home-top on" wx:if="{{scrollTop>72}}">
    <view class="fb fb-col item-grow-1 fb-cross-center  {{nav==item.id?'coE71415':''}}" bindtap="changeNav" data-nav="{{item.id}}" wx:for="{{navList}}" wx:key="index">{{item.name}}</view>
  </view>

  <!-- 基本信息 -->
  <view class="pd24 pt20 pb20" wx:if="{{nav==1}}">

    <view class="rel mb20" wx:if="{{info.end_match&&info.end_match.length>0}}">
      <swiper autoplay="true" current="{{current}}" interval="8000" duration="500" bindchange="bindchange">
        <block wx:for="{{info.end_match}}" wx:key="item">
          <swiper-item>
            <navigator hover-class="none" open-type="{{isHome?'reLaunch':'navigate'}}" url="/pages/matchInfo/matchInfo?id={{item.match_id}}" class="cofff match-top center box radius10 mb20" style="background:url({{imgUrl+'team_bg1.png'}}) no-repeat center bottom/702rpx 289rpx;">
              <view class="">
                <view class="rel match-top-con inline fsize28">
                  <image src="{{item.home_team_logo?item.home_team_logo:imgUrl+'banner_1.png'}}" mode='aspectFit' class="radius-50 block"></image>
                  <view class="abs">{{item.home_team_name}}</view>
                </view>
                <view class="rel inline match-top-num fsize24">
                  <view class="fsize66 bold" wx:if="{{item.status_id==1||item.status_id==9||item.status_id==12||item.status_id==13}}">VS</view>
                  <view class="fsize66 bold" wx:else>{{item.home_scores[0]}}-{{item.away_scores[0]}}</view>
                  <view class="abs tx ">{{item.time}}</view>
                </view>
                <view class="rel match-top-con inline fsize28">
                  <image src="{{item.away_team_logo?item.away_team_logo:imgUrl+'banner_1.png'}}" mode='aspectFit' class="radius-50 block"></image>
                  <view class="abs">{{item.away_team_name}}</view>
                </view>
              </view>

            </navigator>
          </swiper-item>
        </block>
      </swiper>
      <view class="fsize22 cofff match-top-box abs">
        <view class="{{item=='胜'?'bgE71415':''}} {{item=='负'?'bg022B43':''}} {{item=='平'?'bg63B4F7':''}} {{current==index?'sale':''}}" wx:for="{{info.endMatchCur}}" wx:key="index">{{item}}</view>
      </view>
    </view>

    <view class="bgfff radius10 mb20 pb30" wx:if="{{info.transfer_in.length>0||info.transfer_out.length>0}}">
      <navigator hover-class="none" url="/pages/teamTransfer/teamTransfer?id={{id}}" class="pd24 fsize30 lh88 bor-boD8D8D8 mb50 bold" style="background:url({{imgUrl+'match_ico26.png'}}) no-repeat center right 24rpx/14rpx 20rpx;">转会</navigator>
      <view class="f-cb fsize24 center">
        <navigator hover-class="none" url="/pages/teamTransfer/teamTransfer?id={{id}}&nav=1" class="fl w50 bor-riD8D8D8 box">
          <view class="coE71415 mb20">转会（{{info.transfer_in_count}}）</view>
          <view>
            <image src="{{item.player_logo?item.player_logo:imgUrl+'tx.png'}}" mode="aspectFill" wx:for="{{info.transfer_in}}" wx:key="index" class="avatar"></image>
          </view>
        </navigator>
        <navigator hover-class="none" url="/pages/teamTransfer/teamTransfer?id={{id}}&nav=2" class="fl w50">
          <view class="coFEA830 mb20">转出（{{info.transfer_out_count}}）</view>
          <view>
            <image src="{{item.player_logo?item.player_logo:imgUrl+'tx.png'}}" mode="aspectFill" wx:for="{{info.transfer_out}}" wx:key="index" class="avatar"></image>
          </view>
        </navigator>
      </view>

    </view>

    <view class="bgfff radius10 mb20" wx:if="{{info.honor_list.length>0}}">
      <navigator hover-class="none" url="/pages/teamPrize/teamPrize?id={{id}}" class="pd24 fsize30 lh88 bor-boD8D8D8 bold" style="background:url({{imgUrl+'match_ico26.png'}}) no-repeat center right 24rpx/14rpx 20rpx;">夺得锦标</navigator>
      <view class="f-cb fsize22 center pt35 pb50">
        <view class="fl w33 info-prize box" wx:for="{{info.honor_list}}" wx:key="index" wx:if="{{index<3}}">
          <image src="{{item.honor_logo?item.honor_logo:imgUrl+'banner_1.png'}}" mode='aspectFit' class=" block"></image>
          <view class="row1">{{item.honor_name}}</view>
          <view class="fsize24 coE71415">{{item.number}}</view>
        </view>
      </view>
    </view>

    <view class="bgfff radius10 mb20" wx:if="{{info.recent_match&&info.recent_match.length!=0}}">
      <view class="pd24 fsize30 lh88 bor-boD8D8D8 bold">最近的比赛</view>
      <navigator hover-class="none" url="/pages/matchInfo/matchInfo?id={{info.recent_match.match_id}}" class="rel pt30 pb30 info-match" style="background:url({{imgUrl+'match_ico26.png'}}) no-repeat center right 24rpx/14rpx 20rpx;">
        <view class="abs fsize22 coA0A0A0 info-match-fl box center">{{info.recent_match.match_time}}</view>
        <view class="fsize24 bor-leD8D8D8 info-match-fr box">
          <view class="mb20">
            <image src="{{info.recent_match.home_team_logo?info.recent_match.home_team_logo:imgUrl+'banner_1.png'}}" mode='aspectFit' class="fl mr20"></image>
            {{info.recent_match.home_team_name}}
          </view>
          <view>
            <image src="{{info.recent_match.away_team_logo?info.recent_match.away_team_logo:imgUrl+'banner_1.png'}}" mode='aspectFit' class="fl mr20"></image>
            {{info.recent_match.away_team_name}}
          </view>
        </view>
      </navigator>
    </view>

    <view class="bgfff radius10 mb20">
      <navigator hover-class="none" class="pd24 fsize30 lh88 bor-boD8D8D8 bold">基础信息</navigator>
      <view class="lh72 pd24 fsize22">
        <view class="bor-boD8D8D8 f-cb">
          <view class="fl coA0A0A0">主教练</view>
          <view class="fr">{{info.team_info.manager_name}}</view>
        </view>
        <view class="bor-boD8D8D8 f-cb">
          <view class="fl coA0A0A0">成立时间</view>
          <view class="fr">{{info.team_info.foundation_time}}</view>
        </view>
        <view class="bor-boD8D8D8 f-cb">
          <view class="fl coA0A0A0">国家</view>
          <view class="fr">
            <image src="{{info.team_info.country_logo}}" wx:if="{{info.team_info.country_logo}}" mode="aspectFit" class="info-country"></image> {{info.team_info.country_name}}</view>
        </view>
        <view class="bor-boD8D8D8 f-cb">
          <view class="fl coA0A0A0">球场</view>
          <view class="fr">{{info.team_info.venue_name}}</view>
        </view>
        <view class=" f-cb">
          <view class="fl coA0A0A0">球场容量</view>
          <view class="fr">{{info.team_info.capacity}}观众</view>
        </view>

      </view>

    </view>
  </view>

  <!-- 积分榜 -->
  <view class=" pt20 pb20" wx:if="{{nav==2&&pointList}}">
    <view class="pd24 mb20">
      <picker bindchange="bindPickerChange" value="{{stageNum}}" range="{{teamStage}}" range-key="name">
        <view class="fsize24 pd24 lh72 radius6" style="background:#fff url({{imgUrl+'team_ico3.png'}}) no-repeat center right 24rpx/22rpx 13rpx;">{{teamStage[stageNum].name}}</view>
      </picker>

    </view>

    <view>
      <view class="f-cb fsize24 coA0A0A0 bgfff lh70">
        <view class="fl wid100 box pl25">排名</view>
        <view class="fl wid200">球队</view>
        <view class="fl wid90">赛</view>
        <view class="fl wid140">胜/平/负</view>
        <view class="fl wid110">进/失</view>
        <view class="fl wid100">积分</view>
      </view>
      <view class="rel " wx:for="{{pointList}}" wx:key="index" wx:for-index="index" wx:for-item="item">
        <view class="center cofff lh72 fszie22" style="background:url({{imgUrl+'team_bg2.png'}}) no-repeat center /750rpx 72rpx;" wx:if="{{item.group_name}}">{{item.group_name}}</view>
        <view url="/pages/teamInfo/teamInfo?id={{it.team_id}}" class="rel" wx:for="{{item.newList}}" wx:key="idx" wx:for-index="idx" wx:for-item="it">
          <view class="abs team-integral-bg" style="background:{{it.promotion_color}}"></view>
          <view class="abs cofff fsize22 center pl20 pr20 lh40 radius20 team-integral-tx" style="background:#0084FF" wx:if="{{it.name}}">{{it.name}}</view>
          <navigator hover-class="none" url="/pages/teamInfo/teamInfo?id={{ix.team_id}}" open-type="redirect" class="f-cb fsize22 lh88 team-integral-con rel" wx:for="{{it.list}}" wx:key="ix" wx:for-item="ix">
            <view class="fl wid100 box pl25">{{ix.position}}</view>
            <view class="fl wid200">
              <image src="{{ix.team_logo?ix.team_logo:imgUrl+'banner_1.png'}}" mode="aspectFit" class="fl hei40 wid40 mt25 mr10"></image>
              <view class="fl row1 wid150">{{ix.team_name}}</view>
            </view>
            <view class="fl wid90">{{ix.total}}</view>
            <view class="fl wid140">{{ix.won}}/{{ix.draw}}/{{ix.loss}}</view>
            <view class="fl wid110">{{ix.goals}}/{{ix.goals_against}}</view>
            <view class="fl wid100">{{ix.points}}</view>

          </navigator>
        </view>


      </view>




    </view>
  </view>

  <view class="list-none pb50" wx:if="{{nav==2&&!pointList}}">
    <image src="{{imgUrl+'no3.png'}}" class=" img3"></image>
    <view>暂无数据</view>
  </view>



  <!-- 比赛 -->
  <view class="pd24 pt20 pb20 fsize24" wx:if="{{nav==3&&list}}">
  <picker bindchange="bindPickerMatch" value="{{year}}" range="{{yearsList}}" range-key="year">
   <view class="pd24 mb20">
      <view class="fsize24 pd24 lh72 radius6" style="background:#fff url({{imgUrl+'team_ico3.png'}}) no-repeat center right 24rpx/22rpx 13rpx;">{{yearsList[year].year}}</view>
    </view>
  </picker>
    
