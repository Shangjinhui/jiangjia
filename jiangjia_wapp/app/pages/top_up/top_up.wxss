/* pages/top_up/top_up.wxss */
.por{
  min-height: 100vh;
  background-color: #F4F7FA;
  padding: 0 24rpx 60rpx 24rpx;
}
.mb24{margin-bottom: 24rpx;}
.tip-fa{
  text-align: center;
  padding: 28rpx 0 17rpx;
}
.tip-fa text{
  color: #A0A0A0;
  font-size: 24rpx;
  position: relative;
  line-height: 33rpx;
}
.tip-fa text:before,.tip-fa text:after{
  width:115rpx;
  height:1px;
  background-color: #D8D8D8;
  position: absolute;
  content: '';
  top: 50%;
  transform: translateY(-50%);
}
.tip-fa text:before{
  right: calc(100% + 14rpx);
}
.tip-fa text:after{
  left: calc(100% + 14rpx);
}
.list{
  padding: 37rpx;
  background-color: #fff;
  border-radius: 12rpx
}
.list .mbox{
  width: 300rpx;
  height: 165rpx;
  text-align: center;
  padding-top: 40rpx;
  box-sizing: border-box;
  background-color: #F8F8F8;
  border-radius:6px;
}
.list .mbox .title{
  font-size:40rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:56rpx;
}
.list .mbox .tit{
  font-size:24rpx;
  font-weight:500;
  color:rgba(160,160,160,1);
  line-height:33rpx;
}
.list .mbox.on{
  background:linear-gradient(90deg,rgba(231,20,21,1) 0%,rgba(217,10,11,1) 100%);
}
.list .mbox.on .title,
.list .mbox.on .tit{
  color: #fff;
}
.other-fa{
  font-size:24rpx;
  font-weight:400;
  color:rgba(160,160,160,1);
  line-height: 1;
  margin: 30rpx 0 25rpx;
}
.other-money{
  height: 68rpx;
  padding-bottom: 37rpx;
  border-bottom: 1px solid #D8D8D8;
}
.other-money input{
  display: block;
  width: 430rpx;
  font-size:48rpx;
  font-weight:400;
  line-height: 68rpx;
  height: 68rpx;
}
.other-money .color{
  color:rgba(160,160,160,.5);
}
.other-money .fa{
  line-height: 68rpx;
  font-size:48rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.pay{
  width: 700rpx;
  background-color: #fff;
  border-radius: 12rpx;
  margin: 24rpx auto 0;
  padding-top: 26rpx;
}
.pay .title{
  font-size:28rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:1;
  margin-bottom: 30rpx;
  padding: 0 37rpx;
}
.pay .box {
  padding: 0 37rpx 43rpx;
}
.pay .box image{
  display: block;
  width: 51rpx;
  height: 51rpx;
}
.pay .box .icon{
  width: 46rpx;
  height: 46rpx;
}
.submit{
  width:622rpx;
  height:88rpx;
  line-height: 88rpx;
  text-align: center;
  background:linear-gradient(90deg,rgba(231,20,21,1) 0%,rgba(217,10,11,1) 100%);
  border-radius:12rpx;
  color: #fff;
  font-size:28rpx;
  font-weight:500;
  margin: 67rpx auto 0;
}