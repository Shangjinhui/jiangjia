/* pages/problem_feedback/problem_feedback.wxss */
.problem{
  padding: 0 24rpx;
}
.problem .box .title{
  padding: 25rpx 0 10rpx;
  font-size: 28rpx;
  color: #333333;
  line-height: 40rpx;
}
.problem .box .text {
  padding-bottom: 20rpx;
  border-bottom: 1px solid #D8D8D8;
}
.problem .box .text .input{
  display: block;
  width: 100%;
  height:60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}
.problem .box .text textarea{
  font-size: 28rpx;
  display: block;
  width: 100%;
  height:150rpx;
  padding-top:13rpx;
}
.problem .box .list{
  margin-top: 20rpx;
}
.problem .box .img{
  width: 128rpx;
  height: 128rpx;
  margin:0 15rpx 15rpx 0;
}
.problem .box .avatarBtn{
  width: 128rpx;
  height: 128rpx;
  margin:0 15rpx 15rpx 0;
  box-sizing: border-box;
} 
.problem  .submit{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  text-align: center;
  color: #fff;
  background: #fff;
  /* border-top-left-radius:12rpx; */
  /* border-top-right-radius: 12rpx; */
}
.problem  .submit view{
  background:linear-gradient(90deg,rgba(231,20,21,1) 0%,rgba(217,10,11,1) 100%);
  line-height: 88rpx;

}
.problem  .submit.on{
  padding-bottom: 68rpx;
}
.img1{
  width: 40rpx;
  height: 40rpx;
  top: -10rpx;
  right: -10rpx;
}