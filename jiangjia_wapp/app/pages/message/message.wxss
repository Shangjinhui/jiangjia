/* pages/message/message.wxss */
.por{
  font-family:PingFangSC-Medium,PingFang SC;
  min-height: 100vh;
  background-color: #F4F7FA;
}
.head-box{
  height: 74rpx;
  line-height: 74rpx;
  text-align: center;
  background-color: #fff;
  box-shadow:0px 1px 0px 0px rgba(238,238,238,1);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
.head-box .tit{
  margin: 0 65rpx;
  font-size:28rpx;
  display: inline-block;
  font-weight:500;
  color:rgba(51,51,51,1);
  position: relative;
}
.head-box .tit:before{
  display: block;
  content: '';
  width:20rpx;
  height:4rpx;
  border-radius:3px;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
}
.head-box .tit.on:before{
  background:rgba(231,20,21,1);
}
.head-box .tit.on{
  color: #E71415;
}
.list{
  padding: 43rpx 24rpx 30rpx;
}
.list .box{
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 25rpx 30rpx 20rpx;
  border-radius:6px;
  position: relative;
}
.list .box .point,
.lists .box .point{
  display: block;
  width:14rpx;
  height:14rpx;
  background:rgba(231,20,21,1);
  position: absolute;
  right: 17rpx;
  top: 17rpx;
  border-radius: 50%;
}
.list .box .title{
  font-size:28rpx;
  line-height: 1.4;
  font-weight:500;
  color:rgba(51,51,51,1);
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-bottom: 4rpx;
}
.list .box .time{
  height:30rpx;
  font-size:22rpx;
  font-weight:400;
  color:rgba(160,160,160,1);
}
.list .box .detaile{
  height:33rpx;
  font-size:24rpx;
  font-weight:400;
  color:rgba(160,160,160,1);
  padding-top: 14rpx;
  border-top: 1px solid #D8D8D8;
  margin-top: 20rpx;
}
.lists{
  padding: 0 24rpx 30rpx;
}
.lists .box{
  background-color: #fff;
  border-radius: 6rpx;
  padding:25rpx 30rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.lists .box .title{
  font-size:28rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:40rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-bottom: 15rpx;
}
.lists .box .mbox .img{
  width: 127rpx;
  height: 127rpx;
  border:1px solid #E4E4E4;
  background:no-repeat center/cover;
}
.lists .box .mbox .text{
  margin-left: 30rpx;
  width: calc(100% - 190rpx);
  font-size:24rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:33rpx;
  padding-top: 15rpx;
}