/* pages/myorder/myorder.wxss */
.por{
  min-height: 100vh;
  background-color:#F4F7FA;
  font-family:PingFangSC-Regular,PingFang SC;
}
.list{
  padding:24rpx 24rpx 30rpx;
}
.list .box{
  background-color: #fff;
  border-radius:12rpx;
  margin-bottom: 24rpx;
}
.list .box .time{
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 30rpx;
  border-bottom: 1px solid #D8D8D8;
  font-size:26rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
}
.list .detaile{
  padding: 25rpx 0;
  border-bottom: 1px solid #D8D8D8;
  width: calc(100% - 48rpx);
  margin: 0 auto;
}
.list .box .detaile .fa{
  font-size:26rpx;
  font-weight:400;
  color:rgba(160,160,160,1);
  line-height: 37rpx;
  margin-bottom: 10rpx;
}
.list .box .detaile .fa text{
  color:#333;
}
.list .box .detaile .fa:last-child{
  margin-bottom: 0;
}
.list .box .money{
  font-size:26rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  text-align: right;
  padding: 0 24rpx;
  height: 98rpx;
  line-height: 98rpx;
}
.list .box .money text{
  color: #E71415;
}