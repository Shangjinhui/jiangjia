/* pages/set_up/set_up.wxss */
.por{
  font-family:PingFangSC-Regular,PingFang SC;
  min-height:calc(100vh - 20rpx);
  width: 100%;
  background-color: #F4F7FA;
  padding-top: 20rpx;
}
.box{
  height: 88rpx;
  line-height: 88rpx;
  padding: 0 24rpx;
  border-bottom: 1px solid #F4F7FA;
  background-color: #fff;
}
.box.on{
  margin-bottom: 20rpx;
}
.box text{
  display: inline-block;
  font-size:30rpx;
  font-weight:400;
  color:rgba(62,62,62,1);
}
.box .arr{
  display: inline-block;
  height: 88rpx;
  width:40rpx;
}
.btn{
  width:622rpx;
  height:88rpx;
  line-height: 88rpx;
  background:linear-gradient(90deg,rgba(231,20,21,1) 0%,rgba(217,10,11,1) 100%);
  border-radius:12rpx;
  text-align: center;
  color: #fff;
  font-size:28rpx;
  font-weight:500;
  margin: 60rpx auto 0;
}