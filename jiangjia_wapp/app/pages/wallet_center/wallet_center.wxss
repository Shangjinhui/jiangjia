/* pages/wallet_center/wallet_center.wxss */
.por{
  min-height: 100vh;
  background-color: #F4F7FA;
}
.head{
  width: 100%;
  height: 208rpx;
}
.head .box{
  position: relative;
  margin:0 auto;
  top: 35rpx;
  width: 702rpx;
  height: 212rpx;
  display: flex;
  padding: 48rpx 0;
  box-sizing: border-box;
}
.head .box .mbox{
  flex: 1;
  padding-left: 55rpx;
  box-sizing: border-box;
}
.head .box .mbox:last-child{
  border-left: 1px solid #D8D8D8;
}
.head .box .mbox .numer{
  font-size: 24rpx;
  color:rgba(51,51,51,1);
  line-height: 1;
}
.head .box .mbox .numer text{
  font-size:60rpx;
  font-family:DIN-Bold,DIN,arial;
  font-weight:bold;
  margin-right: 5rpx;
}
.head .box .mbox .fa{
  font-size:24rpx;
  font-weight:500;
  color:rgba(160,160,160,1);
  line-height:33rpx;
  margin-top: 12rpx;
}
.nav{
  height: 74rpx;
  line-height: 74rpx;
  padding: 0 24rpx;
  margin-top: 50rpx;
}
.nav .tit{
  font-size:28rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height: 74rpx;
  margin-right: 100rpx;
  position: relative;
}
.nav .tit.on{
  color:#E71415;
}
.nav .tit:before{
  display: block;
  width: 20rpx;
  height: 4rpx;
  border-radius: 3rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
  content: '';
}
.nav .tit.on:before{
  background-color: #E71415;
}
.list{
  background-color: #fff;
  border-radius:12rpx;
  width: 700rpx;
  margin: 0 auto 30rpx auto;
  padding: 9rpx 28rpx 30rpx;
  box-sizing: border-box;
  min-height: 600rpx;
}
.list .box{
  padding: 16rpx 0 17rpx;
  border-bottom: 1px solid #D8D8D8;
  position: relative;
}
.list .box .title{
  font-size:28rpx;
  font-weight:400;
  line-height: 40rpx;
  color:rgba(51,51,51,1);
  margin-bottom: 2rpx;
}
.list .box .time{
  font-size:22rpx;
  font-weight:400;
  color:rgba(160,160,160,1);
  line-height:30rpx;
}
.list .box .number{
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  font-size:28rpx;
  font-family:DIN-Regular,DIN,arial;
  font-weight:400;
  color:rgba(231,20,21,1);
  line-height:34rpx;
}
.list .box .number.on{
  color:#136F63
}
.fix-box{
  width:100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  z-index: 5;
  background-color: #fff;
  text-align: center;
  box-shadow: 0 -2rpx 3rpx 0 rgba(0,0,0,0.03);
}
.fix-box navigator{
  width: 46%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
  margin: 7rpx 10rpx;
  border-radius: 12rpx;
  display: inline-block;
}
.fix-box navigator.withdrawal{
  background-color: #3F88C5;
}
.fix-box navigator.top-up{
  background-color: #E71415;
}
.pb170 .fix-box{
  padding-bottom: 68rpx;
}