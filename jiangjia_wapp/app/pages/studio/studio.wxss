  border: 1px solid rgba(218, 218, 218, 0.5);
  padding: 0 30rpx 0 83rpx;
}

.stu-bot-box  input {
  height: 70rpx;
  width: 100%;
}

.stu-bot image {
  width: 36rpx;
  height: 36rpx;
  top: 14rpx;
  left: 27rpx;
}

.stu-bot .fr {
