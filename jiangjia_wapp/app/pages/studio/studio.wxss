.stu-bot {
  background: #fff;
  position: fixed;
  z-index: 2;
  left: 0;
  width: 100%;
  padding: 15rpx 24rpx;
  bottom: 0;
  box-shadow: 0px -4rpx 10rpx 0px rgba(0, 0, 0, 0.04);
}
.stu-bot.on{
  padding-bottom: 83rpx;
}

.stu-bot-box {
  /* width: 502rpx; */
