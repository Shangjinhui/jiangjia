/**index.wxss**/

page {
  background: #f4f7fa;
}

.home-bg {
  height: 100vh;
  width: 100%;
  left: 0;
  bottom: 100%;
}

.nav-top {
  position: fixed;
  z-index: 22;
  top: 0;
  width: 100%;
  left: 0;
}

.nav-top .fr {
  width: 44rpx;
  height: 44rpx;
  margin-top: 22rpx;
}

.nav-bg {
  position: absolute;
  top: -88rpx;
  left: 0;
  width: 100%;
  height: 317rpx;
}

.banner .wx-swiper-dot {
  display: inline-flex;
  width: 10rpx;
  height: 10rpx;
  justify-content: space-between;
}

.banner .wx-swiper-dot::before {
  content: '';
  flex-grow: 1;
  background: transparent;
  border: 1px solid rgba(255, 255, 255, 0.8);
  border-radius: 5rpx;
}

.banner .wx-swiper-dot-active::before {
  background: #e71415;
  border-color: #e71415;
}

.home-nav {
  white-space: nowrap;
}

.home-nav-con {
  padding: 20rpx;
  width: 388rpx;
  height: 216rpx;
  box-shadow: 0px 2rpx 20rpx 0px rgba(0, 0, 0, 0.04);
  border-radius: 6rpx;
}

.home-nav-top .fr {
  background: no-repeat center right/18rpx 18rpx;
  padding-right: 30rpx;
}

.home-nav-text {
  line-height: 38rpx;
}

.home-nav-text .img2 {
  width: 8rpx;
  height: 13rpx;
  right: -20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.home-nav-text .text {
  width: 265rpx;
}

.home-nav-text .img1 {
  width: 38rpx;
  height: 38rpx;
  margin-right: 8rpx;
}

.home-nav-text .tx {
  background: no-repeat center left/26rpx 26rpx;
  padding-left: 30rpx;
}

.home-nav-btn {
  width: 703rpx;
  line-height: 70rpx;
  background: rgba(223, 240, 255, 1);
  border-radius: 4rpx;
}

.home-nav-btn view {
  background: no-repeat center right/14rpx 21rpx;
  padding-right: 23rpx;
}

.home-tit .coE71415::after {
  position: absolute;
  content: '';
  width: 20rpx;
  height: 4rpx;
  background: #e71415;
  border-radius: 3rpx;
  bottom: -20rpx;
  left: 50%;
  transform: translateX(-50%);
}

.home-hot {
  padding: 24rpx;
}

.home-hot-tx::before {
  height: 13rpx;
  background: rgba(231, 30, 31, 1);
  border-radius: 17rpx 2rpx 17rpx 2rpx;
  opacity: 0.3;
  width: 100%;
  position: absolute;
  content: '';
  left: 0;
  bottom: 0;
}

.home-hot-tx view {
  background: rgba(252, 231, 231, 1);
  border-radius: 17rpx 2rpx 17rpx 2rpx;
  padding: 0 10rpx;
}

.bot-top {
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}

.home-line view {
  position: relative;
}

.home-line view::after {
  position: absolute;
  content: '';
  width: 1px;
  height: 31rpx;
  background: #d8d8d8;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
}

.home-line view:last-child::after {
  display: none;
}

.home-expert-top {
  width: 228rpx;
  line-height: 60rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 6rpx;
  border: 2rpx solid rgba(188, 1, 0, 1);
  margin: 20rpx auto 0 auto;
}

.home-expert-top view {
  width: 50%;
  color: #a4a4a4;
}

.home-expert-top view.on {
  background: rgba(188, 1, 0, 1);
  color: #fff;
}

.home-match {
  padding: 20rpx 30rpx;
}

.home-match-con image {
  width: 32rpx;
  height: 32rpx;
  /* vertical-align: -5rpx; */
}

.img2{
  top: 4rpx;
  right: 0  
}
.img3{
  top: 4rpx;
  left: 0  
}
.minhei40{min-height: 40rpx;}

.home-review-top {
  position: fixed;
  width: 100%;
  top: 84rpx;
  left: 0;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -1px 0px 0px rgba(216, 216, 216, 1);
  border-radius: 12rpx 12rpx 0px 0px;
  white-space: nowrap;
  z-index: 22;
}

.home-review-top view {
  display: inline-block;
  padding: 0 30rpx;
}

.home-review-con image {
  /* width:232rpx;
height:145rpx; */
}

.home-review-con .fl {
  width: 400rpx;
}

.home-review-con .top {
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 40rpx;
  top: 32rpx;
  left: 25rpx;
  right: 25rpx;
  z-index: 2;
}

.home-review-con .bot {
  font-size: 18rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: rgba(160, 160, 160, 1);
  line-height: 18rpx;
  left: 13rpx;
  right: 13rpx;
  bottom: 25rpx;
  z-index: 2;
  text-align: right;
}

.home-review-con::after {
  position: absolute;
  content: '';
  left: 0;
  top: 0;
  width: 100%;
  height: 144rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 1) 0%, rgba(0, 0, 0, 0) 100%);
  opacity: 0.5;
}

.home-review-con::before {
  position: absolute;
  content: '';
  left: 0;
  bottom: 0;
  width: 100%;
  height: 144rpx;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 100%);
  opacity: 0.8;
}
