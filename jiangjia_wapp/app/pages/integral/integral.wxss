/* pages/integral/integral.wxss */
.por{
  font-family:PingFangSC-Medium,PingFang SC;
  min-height: 100vh;
  background-color: #F4F7FA;
}
.head-box{
  height: 74rpx;
  line-height: 74rpx;
  text-align: center;
  background-color: #fff;
  box-shadow:0px 1px 0px 0px rgba(238,238,238,1);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;

}
.head-box .tit{
  margin: 0 65rpx;
  font-size:28rpx;
  display: inline-block;
  font-weight:500;
  color:rgba(51,51,51,1);
  position: relative;
}
.head-box .tit:before{
  display: block;
  content: '';
  width:20rpx;
  height:4rpx;
  border-radius:3px;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
}
.head-box .tit.on:before{
  background:rgba(231,20,21,1);
}
.head-box .tit.on{
  color: #E71415;
}
.list{
  padding: 0 24rpx 30rpx;
}
.list .box{
  background-color: #fff;
  border-radius: 6rpx;
  margin-bottom: 20rpx;
  padding: 25rpx 30rpx 30rpx;
}
.list .box .mbox .title{
  width:72%;
  font-size:28rpx;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:40rpx;
}
.list .box .mbox .number{
  display: inline-block;
  float: right;
  line-height: 40rpx;
  font-size:28rpx;
  font-weight:bold;
  color:rgba(231,20,21,1);
} 
.list .box.on .mbox .number{
  color:#4FC419;
}
.list .box .time{
  font-size:22rpx;
  font-weight:400;
  color:rgba(160,160,160,1);
  line-height:30rpx;
  margin-top: 4rpx;
}