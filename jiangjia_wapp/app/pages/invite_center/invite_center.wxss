/* pages/invite_center/invite_center.wxss */
page{
background-color: #F4F7FA;
min-height: 100vh;
}
.por{
  min-height:calc(100vh - 110rpx);
  
  width:100%;
  font-family:PingFangSC-Medium,PingFang SC;
  padding-bottom: 110rpx;
}
.ban-img{
  width: 100%;
  height: 448rpx;
  display: block;
}
.rules{
  width:109rpx;
  height:75rpx;
  background:rgba(86,80,176,1);
  border-radius:100px 0px 0px 100px;
  line-height: 1.4;
  text-align: center;
  font-size:24rpx;
  font-weight:500;
  color:rgba(255,255,255,1);
  position: absolute;
  right: 0;
  top: 260rpx;
  padding-top: 13rpx;
}
.rules text{
  display: block;
  padding-left: 10rpx;
}
.list{
  width:700rpx;
  background:rgba(255,255,255,1);
  border-radius:12rpx;
  margin: 32rpx auto 20rpx;
  box-sizing:border-box;
  padding: 40rpx 65rpx 5rpx 60rpx;
}
.list .box{
  margin-bottom: 35rpx;
}
.list .box text{
  font-size:40rpx;
  font-family:arial;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height: 1;
  font-style: italic;
  position: relative;
}
.list .box text:before{
  display: block;
  content: '';
  position: absolute;
  bottom: 0;
  left: -5rpx;
  height: 18rpx;
  width: 53rpx;
  background-color: rgba(231, 20, 21, 0.2);
}
.list .box .fa{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height: 1.6;
  width: calc(100% - 100rpx);
}
.fix-box{
  width: 700rpx;
  margin: 0 auto 20rpx;
  background-color: #fff;
  border-radius:12rpx;
  display: flex;
  padding: 26rpx 30rpx 28rpx;
  box-sizing: border-box;
}
.fix-box .mbox:nth-child(1){
  width: 40%;
  position: relative;
}
.fix-box .mbox:nth-child(2){
  width: 33%;
  position: relative;
}
.fix-box .mbox:nth-child(3){
  width: 27%;
  position: relative;
}
.fix-box .mbox .i{
  display: block;
  width:1px;
  height:85rpx;
  background-color: #D8D8D8;
  position: absolute;
  right:36rpx;
  top: 0rpx;
}
.fix-box .mbox .title{
  font-size:36rpx;
  font-weight:600;
  color:rgba(51,51,51,1);
  line-height: 1;
  margin-bottom: 15rpx;
  padding-top: 2px;
}
.fix-box .mbox .fa{
  font-size:22rpx;
  font-weight:400;
  color:rgba(160,160,160,1);
  line-height: 1.2;
}
.fix-box .mbox .arr{
  background: url();
}
.info{
  width: 700rpx;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 23rpx 32rpx 30rpx;
  box-sizing: border-box;
}
.info .title{
  text-align: center;
  margin-bottom: 10rpx;
}
.info .title .icon{
  padding: 12rpx;
  display: inline-block;
  margin: 0 16rpx;
}
.info .detaile{
  font-size:26rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height: 1.7;
}
.fix-btn{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  box-shadow: 0 -1px 3rpx 0 rgba(0,0,0,0.03);
}
.fix-btn .btn{
  width: 700rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #E71C1D;
  border-radius: 12rpx;
  margin: 6rpx auto 0;
  color: #fff;
}