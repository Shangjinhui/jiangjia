/* pages/login/login.wxss */
.login{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  font-family: PingFangSC-Medium;
}
.fix-img{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.center-box{
  position: absolute;
  top: 40%;
  left: 0;
  width: 100%;
  padding: 0 65rpx;
  box-sizing: border-box;
  transform: translateY(-50%);
  z-index: 5;
}
.center-box .title{
  font-size:60rpx;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-bottom: 15rpx;
}
.center-box .detaile{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height: 40rpx;
  margin-bottom: 60rpx;
}
.center-box .auth-btn,
.center-box .auth-colse{
  border-radius: 12rpx;
  width: 622rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  padding: 0;
  margin: 0 auto;
}
.center-box .auth-btn{
  background-image: linear-gradient(90deg, #E71415 0%, #D90A0B 100%);
  color: #FFFFFF;
  margin-bottom:30rpx;
}
.center-box .auth-colse{
  border:1px solid #D90A0B;
  color: #D90A0B;
}
.center-box .tip-fa{
  font-size: 24rpx;
  color: #666666;
  line-height: 24rpx;
  margin-top: 65rpx;
  text-align: center;
}
.center-box .tip-fa navigator{
  color:#D90A0B;
  display: inline;
}